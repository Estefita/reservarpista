<form method="post" action="{{ path('tipo_delete', {'id': tipo.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tipo.id) }}">
     <div class="classes__item__text p-0">
        <a><button class="btn btn-danger">Eliminar</button></a>
    </div>
</form>
