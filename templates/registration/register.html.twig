{% extends 'base.html.twig' %}

{% block title %}Registrar Usuario{% endblock %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
{% block body %}
    {% include "section/section.html.twig" with {'descripcion':'Registrar Jugador'} %}

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="row justify-content-center">    
    <div class="col-6 p-5">
        <h1 class="text-center">Registrar Jugador</h1>
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.nombre, {
                label: 'Nombre:'    
            }) }}
            {{ form_row(registrationForm.apellidos, {
                label: 'Apellidos:'    
            }) }}
            {{ form_row(registrationForm.direccion, {
                label: 'Dirección:'    
            }) }}
            <div class="form-group">
			<div class="class__filter__select">
				<label>Comunidad Autónoma</label>
				<select id="autonomia" onchange="getProvincias()" class="wide" name="admin1code">
					<option value="">Seleccione Autonomía</option>
				</select>
			</div>
			</div>
			<div class="form-group">
			<label>Provincias:</label>
			<div class="class__filter__select">
				<select id="provincias" onchange="getPoblacion()" disabled class="wide" name="admin2code">
					<option value="">Seleccione Provincia</option>
				</select>
			</div>
			</div>
			<div class="form-group">
			<div class="class__filter__select">
				<label>Población:</label>
				<select id="poblacion" disabled class="wide" name="admin3code">
					<option value="">Seleccione Poblacion</option>
				</select>
			</div>
			</div>
            {# {{ form_row(registrationForm.provincia, {
                label: 'Provincia:'    
            }) }}
            {{ form_row(registrationForm.poblacion, {
                label: 'Población:'    
            }) }} #}
            {{ form_row(registrationForm.telefono, {
                label: 'Teléfono:'    
            }) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn estiloboton btn-block">Registrar</button>
        {{ form_end(registrationForm) }}
    </div>
    </div>
{% endblock %}
{% block  javascripts %}
	<script>
		$(document).ready(function () {
getComunidades();
});
	</script>
{% endblock %}
