{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
{% block body %}
    {% include "section/section.html.twig" with {'descripcion':'Registrar Jugador'} %}

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="row justify-content-center">    
    <div class="col-6 p-5">
        <h1 class="text-center">Registrar</h1>
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.nombre, {
                label: 'Nombre:'    
            }) }}
            {{ form_row(registrationForm.apellidos, {
                label: 'Apellidos:'    
            }) }}
            {{ form_row(registrationForm.direccion, {
                label: 'Dirección:'    
            }) }}
            {{ form_row(registrationForm.provincia, {
                label: 'Provincia:'    
            }) }}
            {{ form_row(registrationForm.poblacion, {
                label: 'Población:'    
            }) }}
            {{ form_row(registrationForm.telefono, {
                label: 'Teléfono:'    
            }) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn estiloboton btn-block">Registrar</button>
        {{ form_end(registrationForm) }}
    </div>
    </div>
{% endblock %}
