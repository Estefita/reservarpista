{% extends 'base.html.twig' %}

{% block title %}Hello WebController!
{% endblock %}

{% block body %}
	{% include "section/section.html.twig" with {'descripcion':'Listado de Clubs'} %}
	<section class="classes spad">
        <div class="container">
            <div class="classes__filter">
                <div class="row">
                    <div class="col-lg-12">
                        <form action="#">
                            <div class="class__filter__select">
                                <p>Filter By Day:</p>
                                <select>
                                    <option>All</option>
                                    <option>Option 1</option>
                                    <option>Option 2</option>
                                    <option>Option 3</option>
                                </select>
                            </div>
                            <div class="class__filter__select">
                                <p>Level:</p>
                                <select>
                                    <option>All Levels</option>
                                    <option>Option 1</option>
                                    <option>Option 2</option>
                                    <option>Option 3</option>
                                </select>
                            </div>
                            <div class="class__filter__select">
                                <p>Teacher:</p>
                                <select>
                                    <option>All Teachers</option>
                                    <option>Option 1</option>
                                    <option>Option 2</option>
                                    <option>Option 3</option>
                                </select>
                            </div>
                            <div class="class__filter__select">
                                <p>Style:</p>
                                <select>
                                    <option>All Styles</option>
                                    <option>Option 1</option>
                                    <option>Option 2</option>
                                    <option>Option 3</option>
                                </select>
                            </div>
                            <div class="class__filter__btn">
                                <button><i class="fa fa-search"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
	<section class="classes spad">
		<div class="container">
			<div class="row">
				{% for club in clubs %}
					<div class="col-lg-4 col-md-6">
						<div class="classes__item classes__item__page">
							<div class="classes__item__pic set-bg" data-setbg="img/classes/classes-1.jpg">
								<span>Foto</span>
							</div>
							<div class="classes__item__text">
								<ul>
									<li>
										<span class="icon_calendar"></span>
										{{ club.nomres }}</li>
									<li>
										<span class="icon_clock_alt"></span>
										{{ club.nomclub }}</li>
									<li>
										<span class="icon_clock_alt"></span>
										{{ club.web }}</li>
								</ul>
								<h4>
									<a href="#">100 Hour Yoga Course Rishikesh</a>
								</h4>
								<h6>Jordan Lawson
									<span>- Yoga Teacher</span>
								</h6>
                                <a href="{{ path('app_club_show', {'id': club.id}) }}">Detalle</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
