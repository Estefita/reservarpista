{% extends 'base.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
    <h1>Club</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ club.id }}</td>
            </tr>
            <tr>
                <th>Nomres</th>
                <td>{{ club.nomres }}</td>
            </tr>
            <tr>
                <th>Nomclub</th>
                <td>{{ club.nomclub }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ club.direccion }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ club.telefono }}</td>
            </tr>
            <tr>
                <th>Web</th>
                <td>{{ club.web }}</td>
            </tr>
            <tr>
                <th>Provincia</th>
                <td>{{ club.provincia }}</td>
            </tr>
            <tr>
                <th>Poblacion</th>
                <td>{{ club.poblacion }}</td>
            </tr>
            <tr>
                <th>Fechacreacion</th>
                <td>{{ club.fechacreacion ? club.fechacreacion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('club_index') }}">back to list</a>

    <a href="{{ path('club_edit', {'id': club.id}) }}">edit</a>

    {{ include('club/_delete_form.html.twig') }}
{% endblock %}
