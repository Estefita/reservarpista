{% extends 'base.html.twig' %}

{% block title %}Jugadores{% endblock %}

{% block body %}
	{% include "section/section.html.twig" with {'descripcion':'Jugador'} %}
	<div class="container-fluid p-5">
	<h3 class="text-center">Jugadores</h3>
		<div class="row justify-content-center">
			<div class="col-11">
				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nombre</th>
							<th>Apellidos</th>
							<th>Direccion</th>
							<th>CCAA</th>
							<th>Provincia</th>
							<th>Poblacion</th>
							<th>Telefono</th>
							<th>Fecha Alta</th>
							<th>Acciones</th>
						</tr>
					</thead>
					<tbody>
						{% for jugador in jugadors %}
							<tr>
								<td>{{ jugador.id }}</td>
								<td>{{ jugador.nombre }}</td>
								<td>{{ jugador.apellidos }}</td>
								<td>{{ jugador.direccion }}</td>
								<td>{{ jugador.admin1code }}</td>
								<td>{{ jugador.admin2code }}</td>
								<td>{{ jugador.admin3code }}</td>
								<td>{{ jugador.telefono }}</td>
								<td>{{ jugador.fechacreacion ? jugador.fechacreacion|date('Y-m-d H:i:s') : '' }}</td>
								<td>
									<div class="classes__item__text p-0">
										<div class="row">
											<div class="col-3">
												<a href="{{ path('jugador_show', {'id': jugador.id}) }}" class="btn btn-sm btn-primary">
													<i class="fa fa-eye"></i>
												</a>
											</div>
											<div class="col-3">
												<a href="{{ path('jugador_edit', {'id': jugador.id}) }}" class="btn btn-sm btn-warning">
													<i class="fa fa-pencil-square-o"></i>
												</a>
											</div>
											<div class="col-3">
												{{ include('jugador/_delete_form.html.twig') }}
											</div>
										</div>
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="9">Jugador no encontrado</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="classes__item__text">
		<a href="{{ path('jugador_new') }}" class="class-btn">Crear Nuevo Jugador</a>
	</div>
{% endblock %}
