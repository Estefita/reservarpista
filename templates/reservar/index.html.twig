{% extends 'base.html.twig' %}

{% block title %}Hello ReservarController!
{% endblock %}

{% block body %}
{% include "section/section.html.twig" with {'descripcion':'Reservas'} %}
<section class="classes spad">
	<div class="container">
		<div class="classes__filter">
			<div class="row">
				<div class="col-lg-12">
					<form action="#">
						<div class="class__filter__select">
							<p>Comunidad Autónoma</p>
							<select id="autonomia" onchange="getProvincias()">
							<option value="">Seleccione Autonomía</option>
								{% for geocomunidad in geocomunidades %}
									<option value="{{geocomunidad.admin1code}}">{{geocomunidad.name}}</option>
								{% endfor %}
							</select>
						</div>
						<div class="class__filter__select">
							<p>Provincias:</p>
							<select id="provincias" onchange="getPoblacion()" disabled>
								<option value="">Seleccione Provincia</option>
							</select>
						</div>
						<div class="class__filter__select">
							<p>Población:</p>
							<select id="poblacion" disabled>
								<option value="">Seleccione Poblacion</option>
                            </select>
						</div>
						<div class="class__filter__btn">
							<button>
								<i class="fa fa-search"></i>
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
</section>
{% endblock %}
