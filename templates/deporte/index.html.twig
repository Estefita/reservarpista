{% extends 'base.html.twig' %}

{% block title %}Deporte index{% endblock %}

{% block body %}
{% include "section/section.html.twig" with {'descripcion':'Deporte'} %}
    <h1>Deporte index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Imagen</th>
                <th>Fecha creacion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for deporte in deportes %}
            <tr>
                <td>{{ deporte.id }}</td>
                <td>{{ deporte.nombre }}</td>
                <td>{{ deporte.imagen }}</td>
                <td>{{ deporte.fechacreacion ? deporte.fechacreacion|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('deporte_show', {'id': deporte.id}) }}">Ver</a>
                    <a href="{{ path('deporte_edit', {'id': deporte.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Deporte no encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('deporte_new') }}">Crear Nuevo Deporte</a>
{% endblock %}
