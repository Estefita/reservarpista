{% extends 'base.html.twig' %}

{% block title %}Deporte
{% endblock %}

{% block body %}
	{% include "section/section.html.twig" with {'descripcion':'Deporte'} %}
	<div class="container-fluid p-5">
		<h3 class="text-center">Deporte</h3>
		<div class="row justify-content-center">
			<div class="col-11">
				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nombre</th>
							<th>Imagen</th>
							<th>Fecha Alta</th>
							<th>Acciones</th>
						</tr>
					</thead>
					<tbody>
						{% for deporte in deportes %}
							<tr>
								<td>{{ deporte.id }}</td>
								<td>{{ deporte.nombre }}</td>
								<td>{{ deporte.imagen }}</td>
								<td>{{ deporte.fechacreacion ? deporte.fechacreacion|date('Y-m-d H:i:s') : '' }}</td>
								<td>
									<div class="classes__item__text p-0">
										<div class="row">
											<div class="col-3">
												<a href="{{ path('deporte_show', {'id': deporte.id}) }}" class="btn btn-sm btn-primary">
													<i class="fa fa-eye"></i>
												</a>
											</div>
											<div class="col-3">
												<a href="{{ path('deporte_edit', {'id': deporte.id}) }}" class="btn btn-sm btn-warning">
													<i class="fa fa-pencil-square-o"></i>
												</a>
											</div>
											<div class="col-3">
												{{ include('deporte/_delete_form.html.twig') }}
											</div>
										</div>
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5">Deporte no encontrado</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

	<div class="classes__item__text">
		<a href="{{ path('deporte_new') }}" class="class-btn">Crear Nuevo Deporte</a>
	</div>
{% endblock %}
