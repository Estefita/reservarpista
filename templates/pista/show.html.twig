{% extends 'base.html.twig' %}

{% block title %}Pista{% endblock %}

{% block body %}
	{% include "section/section.html.twig" with {'descripcion':'Pista'} %}

	<h3>Pista</h3>
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ pistum.id }}</td>
			</tr>
			<tr>
				<th>Nombre</th>
				<td>{{ pistum.nombre }}</td>
			</tr>
			<tr>
				<th>Fechacreacion</th>
				<td>{{ pistum.fechacreacion ? pistum.fechacreacion|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Imagen</th>
				<td>{{ pistum.imagen }}</td>
			</tr>
		</tbody>
	</table>
	<div class="classes__item__text">
		<a href="{{ path('pista_index') }}">Volver a listado</a>
		<a href="{{ path('pista_edit', {'id': pistum.id}) }}" class="class-btn">Editar</a>
	</div>
	{# {{ include('pista/_delete_form.html.twig') }} #}
{% endblock %}
