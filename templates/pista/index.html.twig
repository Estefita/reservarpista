{% extends 'base.html.twig' %}

{% block title %}
	Listado de Pistas
{% endblock %}

{% block body %}
	{% include "section/section.html.twig" with {'descripcion':'Pista'} %}
	
	<div class="container-fluid p-5">
	<h3 class="text-center">Pistas</h3>
		<div class="row justify-content-center">
			<div class="col-11">
				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Nombre</th>
							<th>Tipo Pista</th>
							<th>Deporte</th>
							<th>Fecha Alta</th>
							<th>Precio<th>
							<th>Imagen</th>
							<th>Acciones</th>
						</tr>
					</thead>
					<tbody>
						{% for pistum in pistas %}
							<tr>
								<td>{{ pistum.id }}</td>
								<td>{{ pistum.nombre }}</td>
								<td>{{ pistum.tipo }}</td>
								<td>{{ pistum.deporte }}</td>
								<td>{{ pistum.fechacreacion ? pistum.fechacreacion|date('Y-m-d H:i:s') : '' }}</td>
								<td>{{ pistum.precio}}â‚¬</td>
								<td></td>
								<td><img src="{{ pistum.imagen }}" alt="{{pistum.nombre}}" width="75" height="75"/></td>
								<td>
									<div class="classes__item__text p-0">
										<div class="row">
											<div class="col-2">
												<a href="{{ path('pista_show', {'id': pistum.id}) }}"  class="btn btn-sm btn-primary">
													<i class="fa fa-eye"></i>
												</a>
											</div>
											<div class="col-2">
												<a href="{{ path('pista_edit', {'id': pistum.id}) }}" class="btn btn-sm btn-warning">
													<i class="fa fa-pencil-square-o"></i>
												</a>
											</div>
											<div class="col-2">
												{{ include('pista/_delete_form.html.twig') }}
											</div>
										</div>
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5">Pista no encontrada</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="classes__item__text">
		<a href="{{ path('pista_new') }}" class="class-btn">Crear Nueva Pista</a>
	</div>
{% endblock %}
